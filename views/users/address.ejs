    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const deleteButtons = document.querySelectorAll(".Delete");
    
            deleteButtons.forEach(button => {
                button.addEventListener("click", async function () {
                    const addressId = button.getAttribute("address_id");
    
                    // Display confirmation dialog before deleting
                    if (await Swal.fire({
    title: "Are you sure?",
    text: "Are you sure you want to delete the address?",
    icon: "warning",
    showCancelButton: true,
    confirmButtonText: "Yes, delete it!",
    cancelButtonText: "No, cancel!",
    reverseButtons: true
}).then((result) => {
    return result.isConfirmed;
})) {
    try {
        let response = await fetch(`/deleteAddress/${addressId}`, {
            method: "PATCH",
            headers: {
                "Content-Type": "application/json"
            }
        });

        let data = await response.json();
        console.log(data); // For debugging, you can remove this line in production

        if (data.success) {
            window.location.reload(); // Refresh the page
        } else {
            // Optionally handle unsuccessful deletion
            console.error("Deletion was not successful:", data.error);
        }
    } catch (error) {
        console.error("There was a problem with your fetch operation:", error);
        // Optionally handle errors
    }
}
                });
            });
        }); 
    </script>
