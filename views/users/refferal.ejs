            <li>Refferal </li>
        </ul>
    </div>

    <!-- my account wrapper start -->
    <div class="my-account-wrapper pb-100 pt-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- My Account Page Start -->
                    <div class="myaccount-page-wrapper">
                        <!-- My Account Tab Menu Start -->
                        <div class="row">
                            <div class="col-lg-3 col-md-4">
                                <div class="myaccount-tab-menu nav" role="tablist">
                                    <a href="my-account">Dashboard</a>
                                    <a href="/order" >Orders</a>
                                    <a href="/refferal" class="active">Referral</a>
                                    <a href="/loadwallet">Wallet</a>
                                    <a href="/address">Address</a>
                                    <a href="/accountdetails">Account Details</a>
                                    <a href="/change-password">Change Password</a>
                                    <a href="logout">Logout</a>
                                </div>
                            </div>
                            <!-- My Account Tab Menu End -->
                            <!-- My Account Tab Content Start -->
                            <div class="col-lg-9 col-md-8">
                                <div class="tab-content" id="myaccountContent">
                                    <!-- Single Tab Content Start -->
                                    <div class="tab-content" id="myaccountContent">
                                        <!-- Single Tab Content Start -->
                                        <div class="card-body">
                                            <div class="text-center">
                                                <h3>Referral Link</h3>
                                                <div class="card p-3">
                                                    <p><strong>Referral Link:</strong></p>
                                                    <div class="input-group mb-3">
                                                        <input type="text" id="referralLink" class="form-control" value="https://thetimex.online/register?refId=<%=Refferralcode.refferalcode%>" readonly>
                                                        <div class="input-group-append">
                                                            <button onclick="copyReferralLink()" class="btn btn-primary">Copy</button>
                                                        </div>
                                                    </div>
                                                    <p class="text-muted">Share this link with your friends to earn rewards!</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div> <!-- My Account Tab Content End -->
                            </div>
                        </div> <!-- My Account Page End -->
                    </div>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            function copyReferralLink() {
                var referralLink = document.getElementById("referralLink");
                referralLink.select();
                document.execCommand("copy");
                alert("Referral link copied to clipboard!");
            }
        </script>
        
