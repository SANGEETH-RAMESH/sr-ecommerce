                                                                        <%= product.productId.productname %> X <%= product.Quantity %> <span>
                                                                            $<%= product.productId.price * product.Quantity %>
                                                                        </span>
                                                                    </li>
                                                                <% } %>
                                                            <% } %>
                                                        <% }) %>
                                                    <% } %>
                                                <% } %>
                                            </ul>
                                        </div>

