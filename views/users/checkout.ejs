                                <i class="fa fa-edit"></i> Add Address
                            </a>
                            <div class="myaccount-content">
                                
                                <% if (Address[0]?.address?.length > 0) { %>
                                    <% Address[0]?.address?.forEach((addresss, index) => { %>
