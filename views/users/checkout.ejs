                                                    <address>
                                                        <p>Name: <%= addresss.name %></p>
                                                        <p>State: <%= addresss.state %></p>
                                                        <p>Zipcode: <%= addresss.Zipcode %></p>
                                                        <p>City: <%= addresss.city %></p>
                                                        <p>Country: <%= addresss.country %></p>
                                                    </address>
                                                </label>
                                            </div>
                                            <div>
                                                <a href="/checkouteditaddress/<%= addresss._id%>" id="editAddressBtn<%= index %>"
