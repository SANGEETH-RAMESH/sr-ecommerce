                                                        <ul>
                                                            <li>Total <span>
                                                                <% if(req.session.coupon) { %>
                                                                    $<%= parseFloat(totalPrice) - parseFloat(req.session.discount*totalPrice / 100) + 20 %>
                                                                <% } else { %>
                                                                    $ <%= totalPrice + 20 %> 
                                                                <% } %>
                                                                </span></li>
                                                        </ul>
                                                    </div>
                                                    <%}else{%>
