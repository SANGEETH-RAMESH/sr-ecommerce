    <script>
        function validateLoginForm() {
            var password = document.getElementById("password").value.trim();
            var confirmPassword = document.getElementById("confirmpassword").value.trim();
    
            // Reset previous error messages
            document.getElementById("passwordError").style.display = "none";
            document.getElementById("cpasswordError").style.display = "none";
    
            // Check if passwords are not blank
            var passwordError = false;
            var confirmPasswordError = false;
    
            if (password === "") {
                document.getElementById("passwordError").innerText = "Password cannot be blank";
                document.getElementById("passwordError").style.display = "inline";
                passwordError = true;
            } else if (!isValidPassword(password)) {
                document.getElementById("passwordError").innerText = "Password must contain at least one lowercase letter, one uppercase letter, and one number";
                document.getElementById("passwordError").style.display = "inline";
                passwordError = true;
            }
    
            if (confirmPassword === "") {
                document.getElementById("cpasswordError").innerText = "Confirm Password cannot be blank";
                document.getElementById("cpasswordError").style.display = "inline";
                confirmPasswordError = true;
            }
    
            if (password !== confirmPassword) {
                document.getElementById("cpasswordError").innerText = "Passwords do not match";
                document.getElementById("cpasswordError").style.display = "inline";
                confirmPasswordError = true;
            }
    
            // Return false if there are errors
            if (passwordError || confirmPasswordError) {
                return false;
            }
    
            return true; // Submit the form if validation passes
        }
    
        function isValidPassword(password) {
            var lowercaseRegex = /[a-z]/;
            var uppercaseRegex = /[A-Z]/;
            var numberRegex = /[0-9]/;
            return lowercaseRegex.test(password) && uppercaseRegex.test(password) && numberRegex.test(password);
        }
    </script>
  


