                    <form id="AddCoupon" action="/loadaddcoupon" method="get">
                        <button type="submit" class="btn btn-sm font-sm rounded btn-brand">Add Coupon</button>
                    </form>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="header">
                        <div class="header-item" style="text-align: left;">Coupon Code</div>
                        <div class="header-item" style="text-align: left;">Min Price</div>
                        <div class="header-item" style="text-align: left;">Discount</div>
                        <div class="header-item" style="text-align: left;">Start Date</div>
                        <div class="header-item" style="text-align: left;">Expiry Date</div>
                        <div class="header-item" style="text-align: left;">Action</div>
                    </div>
                </header>
                <!-- card-header end// -->
                <div class="card-body">
                    <% coupon.forEach(coupons => { %>
                        <article class="itemlist">
                            <div class="row align-items-center" style="margin-bottom: 15px;">
                                <div class="col-md-2 col-8">
                                    <h6 class="mb-0">
                                        <%= coupons.couponcode %>
                                    </h6>
                                </div>
                                <div class="col-md-2 col-4 text-right" style="width: 100px;">
                                    <h6 class="mb-0">
                                        <%= coupons.minprice %>
                                    </h6>
                                </div>
                                <div class="col-md-1 col-4 text-right" style="margin-left: 70px;">
                                    <h6 class="mb-0">
                                        <%= coupons.discount %>
                                    </h6>
                                </div>
                                <span class="col-md-1 col-4 text-right" style="margin-left: 70px; width: 100px;">
                                    <h6 class="badge rounded-pill alert-success">
                                        <%= coupons.startdate.toLocaleDateString() %>
                                    </h6>
                                </span>
                                <div class="col-md-2 col-6 text-right" style="margin-left: 50px; width: 100px;">
                                    <span class="badge rounded-pill alert-success">
                                        <%= coupons.expirydate.toLocaleDateString() %>
                                    </span>
                                </div>
                                <div class="col-md-2 col-8" style=" width: 200px; margin-left: 20px;" >
                                    <a href="/editcoupon/<%=coupons._id%>" class="btn btn-sm font-sm rounded btn-brand">
                                        <i class="material-icons md-edit"></i> Edit
                                    </a>
                                   
                                    <button type="button" onclick="deleteCoupon('<%=coupons._id%>')" class="blockToggle btn btn-danger btn-sm" data-state="blocked" style="padding: 5px 10px; font-size: 14px;">
                                        Delete
                                    </button>
                                </div>
                            </div>
                            <!-- row .// -->
                        </article>
                    <% }) %>
                    <!-- itemlist  .// -->
                </div>
                <!-- card-body end// -->
            </div>
            
            <!-- card end// -->
            <div class="pagination-area mt-30 mb-50">
                
            </div>
        </section>
        <!-- content-main end// -->

    </main>
    <script>
        function deleteCoupon(couponId) {
          console.log(couponId)  
    
            const data = {
                couponId: couponId
            };
    
           
            Swal.fire({
  title: 'Are you sure?',
  text: "You won't be able to revert this!",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes, delete it!'
}).then((result) => {
  if (result.isConfirmed) {
    // User confirmed, proceed with fetch operation
    fetch('/deletecoupon', {
      method: 'POST', // or 'PUT', 'DELETE', etc.
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(data),
    })
    .then(response => {
      if (!response.ok) {
        throw new Error('Network response was not ok');
      }
      return response.json();
    })
    .then(data => {
      if(data.message == 'Coupon Deleted') {
        // Show success message
        const Toast = Swal.mixin({
          toast: true,
          position: "top",
          showConfirmButton: false,
          timer: 1500,
          timerProgressBar: true,
          didOpen: (toast) => {
            toast.onmouseenter = Swal.stopTimer;
            toast.onmouseleave = Swal.resumeTimer;
          }
        });
        Toast.fire({
          icon: "success",
          title: "Coupon Deleted",
        })
        .then((result)=>{
            window.location.reload()
        })
      }
    })
    .catch(error => {
      // Handle fetch errors
      console.error('Fetch error:', error);
    });
  }
});
        }
    </script>
 
