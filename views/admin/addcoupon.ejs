    <script>
        function couponForm() {
            var couponcode = document.getElementById("couponcode").value.trim();
            var description = document.getElementById("description").value.trim();
            var minprice = document.getElementById("minprice").value.trim();
            var discount = document.getElementById("discount").value.trim();
            var isValid = true;
    
            // Coupon code validation
            if (couponcode === "") {
            document.getElementById("couponcodeError").innerText = "Coupon code cannot be blank";
            document.getElementById("couponcodeError").style.display = "block"; // Show the error span
            isValid = false;
        } else if (!/^2024-SR\d{4}$/.test(couponcode)) {
            document.getElementById("couponcodeError").innerText = "Coupon code must start with '2024-SR' followed by four numbers";
            document.getElementById("couponcodeError").style.display = "block"; // Show the error span
            isValid = false;
        } else {
            document.getElementById("couponcodeError").innerText = "";
            document.getElementById("couponcodeError").style.display = "none"; // Hide the error span
        }
    
            // Description validation
            if (description === "") {
                document.getElementById("descriptionError").innerText = "Description cannot be blank";
                document.getElementById("descriptionError").style.display = "block"; // Show the error span
                isValid = false;
            } else {
                document.getElementById("descriptionError").innerText = "";
                document.getElementById("descriptionError").style.display = "none"; // Hide the error span
            }
    
            // Min price validation
            if (minprice === "") {
                document.getElementById("minpriceError").innerText = "Min price cannot be blank";
                document.getElementById("minpriceError").style.display = "block"; // Show the error span
                isValid = false;
            } else if (parseFloat(minprice) <= 50) {
                document.getElementById("minpriceError").innerText = "Min price must be greater than 50";
                document.getElementById("minpriceError").style.display = "block"; // Show the error span
                isValid = false;
            } else {
                document.getElementById("minpriceError").innerText = "";
                document.getElementById("minpriceError").style.display = "none"; // Hide the error span
            }
    
            // Discount validation
            if (discount === "") {
                document.getElementById("discountError").innerText = "Discount cannot be blank";
                document.getElementById("discountError").style.display = "block"; // Show the error span
                isValid = false;
            } else if (parseFloat(discount) < 0) {
                document.getElementById("discountError").innerText = "Discount cannot be less than 0";
                document.getElementById("discountError").style.display = "block"; // Show the error span
                isValid = false;
            } else if (parseFloat(discount) > parseFloat(minprice) * 0.5) {
                document.getElementById("discountError").innerText = "Discount cannot be greater than 50% of min price";
                document.getElementById("discountError").style.display = "block"; // Show the error span
                isValid = false;
            } else {
                document.getElementById("discountError").innerText = "";
                document.getElementById("discountError").style.display = "none"; // Hide the error span
            }
    
            return isValid;
        }
    </script>
   
