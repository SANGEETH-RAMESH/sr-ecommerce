    <script>
        document.getElementById("productForm").addEventListener("submit", function (event) {
            event.preventDefault(); // Prevent default form submission

            // Perform form validation
            if (validateForm()) {
               

                // Get values from form fields and append to FormData object
                const productId = document.querySelector("#productSelect").value;


                const offer = document.querySelector("#offer").value;

                const data={
                    productId:productId,
                    offer:offer
                }
 

                fetch('/addproductoffer', {
                    method: 'POST',
                    headers:{
                        'Content-type':'application/json'
                    },
                    body: JSON.stringify(data) 
                })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        // Show success alert using SweetAlert
                        if (data.message === "Offer Added") {
                            const Toast = Swal.mixin({
                                toast: true,
                                position: "top",
                                showConfirmButton: false,
                                timer: 1500,
                                timerProgressBar: true,
                                didOpen: (toast) => {
                                    toast.onmouseenter = Swal.stopTimer;
                                    toast.onmouseleave = Swal.resumeTimer;
                                }
                            });
                            Toast.fire({
                                icon: "success",
                                title: "Offer Added",
                                
                            })
                            .then(() => {
                                window.location.href = '/admin/offer'; // Redirect to /admin/product page
                            });
                            form.reset(); // Reset form fields
                        } else if (data.message === "Offer Already Exist") {
                          
                            const Toast = Swal.mixin({
                                toast: true,
                                position: "top",
                                showConfirmButton: false,
                                timer: 1500,
                                timerProgressBar: true,
                                didOpen: (toast) => {
                                    toast.onmouseenter = Swal.stopTimer;
                                    toast.onmouseleave = Swal.resumeTimer;
                                }
                            });
                            Toast.fire({
                                icon: "warning",
                                title: "Offer Already Exist",
                                
                            })
                        } else {
                            // Handle other responses
                        }
                    })
                    .catch(error => {
                        console.log('There was a problem with the fetch operation', error);
                        // Handle errors
                    });
            }
        });
        function validateForm() {
            console.log('hello')

            var productname = document.getElementById("productSelect").value.trim();

            var offer = document.getElementById("offer").value.trim();



            var productError = document.getElementById("productError");

            var offerError = document.getElementById("offererror");

            productError.textContent = "";

            offerError.textContent = "";


            var isValid = true;



            if (productname === "") {
                productError.textContent = "Please select a category";
                productError.style.display = "inline"; // Show error message
                isValid = false; // Set validation flag to false
            } else {
                productError.style.display = "none"; // Hide error message if category is selected
            }




            // Validate quantity
            if (offer === "") {
                offerError.textContent = "offer cannot be empty";
                offerError.style.display = "inline"; // Show error message
                isValid = false;
            }



            return isValid;
        }
    </script>
