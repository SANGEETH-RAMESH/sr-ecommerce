                    </div>
                </div>


                <div class="col-lg-6">
                    <div class="card mb-4">

                        <div class="card-body">
                            <form action="/addproductoffer" method="post" id="productForm">
                                <% if (typeof message !=='undefined' ) { %>
                                    <h4 style="color: red;">
                                        <%= message %>
                                    </h4>
                                    <% } %>

                                        <div class="mb-4">

                                            <div class="col-md-12">
                                                <div class="mb-4">
                                                    <label class="form-label">Product</label>

                                                    <select id="productSelect" name="categoryId" class="form-control">
                                                        <option value="">Select Product</option>
                                                        <!-- Blank option -->
                                                        <% ProductData.forEach(products=> { %>
                                                            <option value="<%= products._id %>">
                                                                <%= products.productname %>
                                                            </option> <!-- Use category._id as the value -->
                                                            <% }); %>
                                                    </select>
                                                    <input type="hidden" name="categoryName" id="categoryName">
                                                    <!-- Add hidden input field for category name -->
                                                    <span id="productError" style="color: red; display: none;">Please
                                                        select a
                                                        category</span>
                                                </div>

                                            </div>

                                        </div>


                                        <div class="mb-4">
                                            <label class="form-label">Offer</label>
                                            <input type="number" placeholder="Enter percentage" name="offer" min="1" max="50" class="form-control" id="offer" />
                                            <span id="offererror" style="color: red; display: none;"></span>
                                        </div>
                                        <button type="submit" class="btn btn-primary"
                                            onclick="return validateForm()">Submit</button>
                            </form>
