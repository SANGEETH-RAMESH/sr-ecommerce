        <section class="content-main">
            <div class="content-header" style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <h2 class="content-title card-title">Category List</h2>

                </div>
                <div style="display: flex;">
                    <form id="unlisted" action="/unlistedcategory"  method="get">
                        <button type="submit" id="unlisted" class="blockToggle btn btn-sm font-sm rounded btn-brand">Unlisted Category</button>
                    </form>
                    <form id="categoryForm" action="/addCategory" method="get" style="margin-left: 10px;">
                        <button type="submit" id="addCategory" class="blockToggle btn btn-sm font-sm rounded btn-brand">Add Category</button>
                    </form>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header" >
                    <div class="row align-items-center">
                        <div class="col-lg-4 col-sm-4 col-4 mb-2 text-center"><h5>Category Name</h5></div>
                        <div class="col-lg-4 col-sm-4 col-4 mb-2 text-center"><h5>Category Image</h5></div>
                        <div class="col-lg-4 col-sm-4 col-4 mb-2 text-center"><h5>Action</h5></div>
                    </div>
                </header>  
                <!-- card-header end// -->
                <div class="card-body">
                    <% Categorys.forEach(Categorys => { %>
                        <% if (!Categorys.is_delete) { %>
                            <article class="itemlist">
                                <div class="row align-items-center">
                                    <div class="col-lg-4 col-sm-4 col-4 mb-2 text-center">
                                        <h6 class="mb-0"><%= Categorys.categoryname %></h6>
                                    </div>
                                    <div class="col-lg-4 col-sm-4 col-4 mb-2 text-center">
                                        <img src="/uploads/product/<%= Categorys.image %>" class="category-image" style="max-width: 50px; max-height: 50px;" alt="Category Image">
                                    </div>
                                    <div class="col-lg-4 col-sm-4 col-4 mb-2 text-center">
                                        <button type="button" category_id="<%= Categorys._id %>" class="blockToggle Delete btn btn-danger" data-state="blocked" style="padding: 5px 10px; font-size: 14px;">Delete</button>
                                        <a href="/Editcategory/<%= Categorys._id %>" class="edit-category-btn btn btn-sm font-sm rounded btn-brand" style="font-size: 14px;">Edit Category</a>
                                    </div>
                                </div>
                                <!-- row .// -->
                            </article>
                        <% } %>
                    <% }); %>
                    <!-- itemlist  .// -->
                </div>
                <!-- card-body end// -->
            <!-- card end// -->
           
        </section>
        <!-- content-main end// -->
        <span class="pagination-area mt-30 mb-50">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-start" style="margin-left: 35px;">
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                            <a class="page-link" href="/admin/category?page=<%= i %>"><%= i %></a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        </span>
    </main>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const deleteButtons = document.querySelectorAll(".Delete");
    
            deleteButtons.forEach(button => {
                button.addEventListener("click", async function () {
                    const categoryId = button.getAttribute("category_id");
    
                    // Display confirmation dialog before deleting
                    if (confirm("Are you sure you want to delete the category?")) {
                        try {
                            let response = await fetch(`/deleteCategory/${categoryId}`, {
                                method: "PATCH",
                                headers: {
                                    "Content-Type": "application/json"
                                }
                            });
    
                            let data = await response.json();
                            console.log(data); // For debugging, you can remove this line in production
    
                            if (data.success) {
                                window.location.reload(); // Refresh the page
                            } else {
                                // Optionally handle unsuccessful deletion
                                console.error("Deletion was not successful:", data.error);
                            }
                        } catch (error) {
                            console.error("There was a problem with your fetch operation:", error);
                            // Optionally handle errors
                        }
                    }
                });
            });
        }); 
    </script>
