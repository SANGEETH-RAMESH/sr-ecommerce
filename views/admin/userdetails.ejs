    <style>
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: white;
            padding: 10px;
            border-bottom: 1px solid white;
        }

        .header-item {
            flex: 1;
            text-align: center;
            font-weight: bold;
        }

        /* Style for the "Back to Dashboard" button */
        #Backtocategory {
            background-color: #4CAF50;
            /* Green background */
            border: none;
            color: white;
            /* White text */
            padding: 10px 20px;
            /* Padding */
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-top: 20px;
            /* Add margin to separate it from other elements */
            cursor: pointer;
        }

        /* Style on hover */
        #Backtocategory:hover {
            background-color: #45a049;
        }
    </style>

</head>


<body>

    <div class="screen-overlay"></div>
    <aside class="navbar-aside" id="offcanvas_aside">
        <div class="aside-top">
            <a href="index" class="brand-wrap">
                <!-- <img src="/adminassets/imgs/theme/sr.sv" class="logo" alt="Nest Dashboard" /> -->
                <span style="font-family: Island Moments, cursive;font-size: 50px;
                font-style: normal; text-align: center;">TimeX</span>
            </a>
            <div>
                <button class="btn btn-icon btn-aside-minimize"><i
                        class="text-muted material-icons md-menu_open"></i></button>
            </div>
        </div>
        <nav>
          <ul class="menu-aside">
              <li class="menu-item ">
                  <a class="menu-link" href="/admin/index">
                      <i class="icon material-icons md-home"></i>
                      <span class="text">Dashboard</span>
                  </a>
              </li>
              <li class="menu-item active">
                  <a class="menu-link" href="/admin/userdetails">
                    <i class="icon material-icons md-person"></i>
                      <span class="text">Customers</span>
                  </a>
              </li>
              <li class="menu-item">
                  <a class="menu-link" href="/admin/category">
                    <i class="icon fa fa-list-alt" aria-hidden="true"></i>
                      <span class="text">Category</span>
                  </a>
              </li>
              <li class="menu-item ">
                  <a class="menu-link" href="/admin/product">
                      <i class="icon material-icons md-shopping_bag"></i>
                      <span class="text">Products</span>
                  </a>

              </li>
              <li class="menu-item ">
                  <a class="menu-link" href="/loadadminorder">
                      <i class="icon material-icons md-shopping_cart"></i>
                      <span class="text">Orders</span>
                  </a>
              </li>
              <li class="menu-item">
                <a class="menu-link" href="/loadcoupon">
                    <i class="icon fas fa-gift"></i>
                    <span class="text">Coupon</span>
                </a>
            </li>
            <li class="menu-item">
                <a class="menu-link" href="/salesreport">
                    <i class="icon fas fa-chart-bar"></i>
                    <span class="text">Sales </span>
                </a>
            </li>
            <li class="menu-item">
                <a class="menu-link" href="/admin/offer">
                    <i class="icon fas fa-tags"></i>
                    <span class="text">Offer </span>
                </a>
            </li>

          </ul>
          <hr />

          <br />
          <br />
      </nav>
    </aside>
    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-search">
                
            </div>
            <div class="col-nav">
                <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"> <i
                        class="material-icons md-apps"></i> </button>
                <ul class="nav">
                    
                    <li class="dropdown nav-item">
                        <a class="dropdown-toggle" data-bs-toggle="dropdown" href="#" id="dropdownAccount"
                            aria-expanded="false"> <img class="img-xs rounded-circle"
                                src="/adminassets/imgs/people/avatar-2.png" alt="User"></a>
                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownAccount">
                            
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-danger" href="/admin/logout"><i
                                    class="material-icons md-exit_to_app"></i>Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </header>
        <section class="content-main">
            <div class="content-header" style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <h2 class="content-title card-title">User Details</h2>

                </div>
                <div>
                
                    
                    <form id="BacktoDashboard" action="/BacktoDashboard" method="get">
                        <button type="submit" class="btn btn-primary btn-sm rounded mx-3">Back to Dashboard</button>
                    </form>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col-lg-3 col-sm-3 col-3 mb-2"><h5>User name</h5></div>
                        <div class="col-lg-3 col-sm-3 col-3 mb-2"><h5>Email</h5></div>
                        <div class="col-lg-3 col-sm-3 col-3 mb-2"><h5>ID</h5></div>
                        <div class="col-lg-3 col-sm-3 col-3 mb-2"><h5>Action</h5></div>
                    </div>
                </header>   
                <!-- card-header end// -->
                <div class="card-body">
                    <% users.forEach(user => { %>
                        <article class="itemlist">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h6 class="mb-0"><%= user.name %></h6>
                                </div>
                                <div class="col">
                                    <h6 class="mb-0"><%= user.email %></h6>
                                </div>
                                <div class="col">
                                    <h6 class="mb-0" id="ID"><%= user._id %></h6>
                                </div>
                                <div class="col">
                                    <% if(user.is_delete){ %>
                                        <button type="button" user_id="<%= user._id %>" class="btn blockToggle px-4 py-2  btn-success text-center" style="width: 100px;" data-state="unblocked">Unblock</button>
                                    <% } else { %>
                                        <button type="button" user_id="<%= user._id %>" class="btn blockToggle btn-danger px-4 py-2 text-center" style="width: 100px;"  data-state="blocked">Block</button>
                                    <% } %>
                                </div>
                            </div>
                            <!-- row .// -->
                        </article>
                    <% })%>
                    <!-- itemlist  .// -->
                </div>

                <!-- card-body end// -->
            </div>
            <!-- card end// -->
        </section>
        <!-- content-main end// -->
        
    </main>
    <script>
        document.querySelectorAll('.blockToggle').forEach(button => {
          button.addEventListener('click', function() {
            const userId = this.getAttribute('user_id') || this.getAttribute('product_id');
            const currentState = this.getAttribute('data-state');
            
            if (currentState === 'blocked') {
              fetch(`/unblock/${userId}`, {
                method: 'PATCH',
                headers: {
                  'Content-Type': 'application/json'
                }
              })
              .then(response => {
                if (!response.ok) {
                  throw new Error('Network response was not ok');
                }
                return response.json();
              })
              .then(data => {
                console.log(data);
                this.innerText = 'Unblock';
                this.setAttribute('data-state', 'unblocked');
                this.classList.remove('btn-danger');
                this.classList.add('btn-success');
                this.removeAttribute('product_id');
                this.setAttribute('user_id', userId);
              })
              .catch(error => {
                console.error('There was a problem with the fetch operation:', error);
              });
            } else {
              fetch(`/block/${userId}`, {
                method: 'PATCH',
                headers: {
                  'Content-Type': 'application/json'
                }
              })
              .then(response => {
                if (!response.ok) {
                  throw new Error('Network response was not ok');
                }
                return response.json();
              })
              .then(data => {
                console.log(data);
                this.innerText = 'Block';
                this.setAttribute('data-state', 'blocked');
                this.classList.remove('btn-success');
                this.classList.add('btn-danger');
                this.removeAttribute('user_id');
                this.setAttribute('product_id', userId);
              })
              .catch(error => {
                console.error('There was a problem with the fetch operation:', error);
              });
            }
          });
        });
    </script>
    <script src="/adminassets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/adminassets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/adminassets/js/vendors/select2.min.js"></script>
    <script src="/adminassets/js/vendors/perfect-scrollbar.js"></script>
    <script src="/adminassets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/adminassets/js/main.js" type="text/javascript"></script>
</body>

</html>