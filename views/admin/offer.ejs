                                    <th scope="col" class="align-center" style="width: 20%;">Offer</th>
                                    <th scope="col" class="align-center" style="width: 20%;">Offer Start</th>
                                    <th scope="col" class="align-center" style="width: 20%;">Offer End</th>
                                    <th scope="col" class="align-center" style="width: 20%;">Active</th>

                                </tr>
                            </thead>
