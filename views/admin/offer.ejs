                                <%productOffer.forEach(poffer=>{%>
                                    <tr>

                                        <td style="font-size: 16px; text-align: center; color: black;">
                                            <%=poffer.product.productname%>
                                        </td>
                                        <td style="font-size: 16px; text-align: center; color: black;">
                                            <%=poffer.offer%> %
                                        </td>
                                        <td style="font-size: 16px; text-align: center; color: black;">
