    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        document.querySelectorAll('.Delete').forEach(button => {
            button.addEventListener('click', function () {
                const cofferId = this.getAttribute('coffer_id');

                // Show SweetAlert confirmation dialog
                swal({
                    title: "Are you sure?",
                    text: "Once deleted, you will not be able to recover this category!",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true,
                })
                    .then((willDelete) => {
                        if (willDelete) {
                            // User confirmed, proceed with deletion
                            fetch('/deletecategoryoffer', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({ cofferId: cofferId })
                            })
                                .then(response => {
                                    if (response.ok) {
                                        // Handle successful response
                                        console.log('Category deleted successfully');
                                        return response.json();
                                    } else {
                                        // Handle error response
                                        console.error('Failed to delete category');
                                        throw new Error('Failed to delete category');
                                    }
                                })
                                .then(data => {
                                    if (data.message === "Category Offer Deleted") {
                                        // Display SweetAlert success message
                                        swal("Success!", "Category Offer Deleted", "success")
                                            .then(() => {
                                                console.log("Category Offer Deleted");
                                                // Reload the page
                                                window.location.reload();
                                            });
                                    }
                                })
                                .catch(error => {
                                    // Handle network error
                                    console.error('Error:', error);
                                });
                        } else {
                            // User canceled the deletion
                            Swal.fire("Category offer deletion canceled!", {
                                icon: "info",
                            });
                        }
                    });
            });
        });
    </script>
    <script>
        // Add event listener to all buttons with class 'pofferdelete'
        document.querySelectorAll('.pofferdelete').forEach(button => {
            button.addEventListener('click', function() {
                // Retrieve the poffer_id attribute value
                const pofferId = this.getAttribute('poffer_id');
                
                
                swal({
                    title: "Are you sure?",
                    text: "Once deleted, you will not be able to recover this Product Offer!",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true,
                })
                    .then((willDelete) => {
                        if (willDelete) {
                            // User confirmed, proceed with deletion
                            fetch('/deleteproductoffer', {
                                method: 'POST',
                                headers: {
